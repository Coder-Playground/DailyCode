<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorAccent"
        android:padding="@dimen/fab_margin"
        android:textSize="@dimen/main_text_size"
        android:layout_marginTop="@dimen/fab_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_entry_mvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entry_mvp"
        android:background="@color/colorAccent"
        android:padding="@dimen/fab_margin"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/main_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/main_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sample_text" />
    <TextView
        android:id="@+id/tv_entry_arouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="@dimen/fab_margin"
        android:text="@string/entry_arouter"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/main_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/main_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_entry_mvp" />

    <TextView
        android:id="@+id/tv_entry_daggerr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entry_dagger"
        android:background="@color/colorAccent"
        android:padding="@dimen/fab_margin"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/main_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/main_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_entry_arouter" />

    <ImageView
        android:id="@+id/iv_glide"
        android:layout_width="@dimen/marginTop_50"
        android:layout_height="@dimen/marginTop_50"
        android:layout_marginTop="@dimen/main_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_entry_daggerr"/>

</android.support.constraint.ConstraintLayout>